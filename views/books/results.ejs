<%- include('../partials/header') %>
<div class="justify-content-center d-flex">
	<div class="my-5 col-md-5">
		<div class="p-5 text-center bg-body-secondary rounded">
			<div class="container py-5">
				<h1 class="text-body-emphasis">
					<strong><%= title %></strong>
				</h1>
				<img width="150vmin" height="200vmin" src="<%= book.dataImg %>" class="mt-3">
				<p class="col-lg-12 mt-4 mx-auto lead">
					<strong>Author:</strong> <%= book.author %>
				</p>
				<p class="col-lg-12 mx-auto lead">
					<strong>Pages:</strong> <%= book.pages %>
				</p>
				<p class="col-lg-12 mx-auto lead">
					<strong>Genre:</strong> <%= book.genre %>
				</p>
				<p class="col-lg-12 mx-auto lead">
					<strong>Description:</strong> <%= book.description %>
				</p>
				<% if (book.price !== 'Price not available') { %>
				<p class="col-lg-12 mx-auto lead">
					<strong>Price:</strong> $<%= book.price %>
				</p>
				<% } %>

				<% if (book.link !== 'Not available') { %>
				<p class="col-lg-12 mx-auto lead">
					<a href="<%= book.link %>">Buy me</a>
				</p>
				<% } %>
				<div class="mt-5">
					<form action="/books" method="POST">
						<input type="text" name="title" value="<%= book.title %>" hidden>
						<input type="text" name="author" value="<%= book.author %>" hidden>
						<input type="number" name="pages" value="<%= book.pages %>" hidden>
						<input type="text" name="genre" value="<%= book.genre %>" hidden>
						<button class="btn btn-lg btn-primary" type="submit">Add book</button>
					</form>

				</div>
			</div>
		</div>
	</div>
</div>

<%- include('../partials/footer') %>